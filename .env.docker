# Docker Environment Configuration
# Copy this to .env and update the values for your production deployment

# Database Configuration
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_USER=devuser
REDIS_PASSWORD=devpassword

# Required: Your blockchain provider API keys
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-alchemy-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# Security (IMPORTANT: Change these for production!)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-for-production
SALT_ROUNDS=12

# Application Settings
NODE_ENV=production
PORT=8000
LOG_LEVEL=info
CORS_ORIGIN=*

# Optional: Performance tuning
BLOCKCHAIN_BATCH_SIZE=1000
BLOCKCHAIN_SYNC_THRESHOLD=2000
BLOCKCHAIN_MAX_CONCURRENT=3

# Optional: Cache settings (in seconds)
BALANCE_CACHE_TTL=30
TX_QUERY_CACHE_TTL=300
ADDRESS_INFO_CACHE_TTL=604800

# Optional: RPC settings
RPC_TIMEOUT=10000
RPC_RETRY_ATTEMPTS=3
ETHERSCAN_TIMEOUT=5000

# Note: DATABASE_URL and REDIS_URL are constructed automatically by docker-compose.yml
# using the credentials above. No need to set them manually.
