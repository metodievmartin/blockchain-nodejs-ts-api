# Development Environment Configuration - safe to commit
PORT=8000

# Database
# Connection string for PostgreSQL
# Format: postgresql://<username>:<password>@<host>:<port>/<database>?schema=<schema>
# This connects to the local PostgreSQL instance started by docker-compose
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/postgres?schema=public"

# Redis
# This connects to the local Redis instance started by docker-compose
# Format: redis://<username>:<password>@<host>:<port>
REDIS_URL=redis://devuser:devpassword@localhost:6379

# Security
SALT_ROUNDS=10

# JWT Secret (32+ characters for development)
JWT_SECRET=your-super-secret-jwt-key-for-development-only-change-in-production

# Blockchain Configuration
# Sepolia testnet RPC URL (you can use Infura, Alchemy, or any other provider)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-alchemy-api-key
# Etherscan API key for transaction history
ETHERSCAN_API_KEY=etherscan-api-key

# Blockchain Performance Settings (optional - will use defaults if not set)
BLOCKCHAIN_BATCH_SIZE=1000
BLOCKCHAIN_SYNC_THRESHOLD=2000
BLOCKCHAIN_MAX_CONCURRENT=3

# Cache Settings (optional - will use defaults if not set)
BALANCE_CACHE_TTL=30
TX_QUERY_CACHE_TTL=300

# RPC Settings (optional - will use defaults if not set)
RPC_TIMEOUT=10000
RPC_RETRY_ATTEMPTS=3
ETHERSCAN_TIMEOUT=5000

# Logging level: debug, info, warn, error
LOG_LEVEL=debug
